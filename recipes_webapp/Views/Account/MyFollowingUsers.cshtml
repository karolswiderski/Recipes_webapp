@model IEnumerable<recipes_webapp.Models.ViewModels.Account.UsersVM>
<link href="~/Content/StyleSheets/Account/MyFollowingUsersCSS.css" rel="stylesheet" />
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.User_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Login)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Repeat_Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date_Of_Joing)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Recommendations)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Role)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Repeat_Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date_Of_Joing)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recommendations)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id_User }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id_User }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id_User })
            </td>
        </tr>
    }

</table>
