
@{
    ViewBag.Title = "Index";
}

<link href="~/Content/StyleSheets/Recipes/IndexCSS.css" rel="stylesheet" />

<link href="https://fonts.googleapis.com/css2?family=Changa:wght@300&display=swap" rel="stylesheet">

<link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@500&display=swap" rel="stylesheet">

<link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="~/Scripts/MyScripts/Recipes/Show-Log-Buttons.js"></script>

<div id="content">

    <div id="left-side">
        <div id="slide-image">
            <div class="photo" id="photo1">
                <img src="~/Content/Images/img1.jpg" alt="photo 1" />
                <div class="para">Ciasto przekładane masą z cukru</div>
            </div>
            <div class="photo" id="photo2">
                <img src="~/Content/Images/img2.jpg" alt="photo 2" />
                <div class="para">Rumiany placem z borówkami i rumem</div>
            </div>
            <div class="photo" id="photo3">
                <img src="~/Content/Images/img3.jpg" alt="photo 3" />
                <div class="para">Galaretkowy szałot ciastany z żółtą wiśnią</div>
            </div>
            <div class="photo" id="photo4">
                <img src="~/Content/Images/img4.jpg" alt="photo 4" />
                <div class="para">Sernik królewski skąpany w polewie toffi</div>
            </div>
            <div class="photo" id="photo5">
                <img src="~/Content/Images/img5.jpg" alt="photo 5" />
                <div class="para">Ciemne ciasto o kształcie wyspy i smaku kokosa</div>
            </div>
            <script src="~/Scripts/MyScripts/Recipes/Automatic-Photo-Slider.js"></script>
        </div>

        <div style="text-align:center">
            <span class="dot active" id="d1"></span>
            <span class="dot" id="d2"></span>
            <span class="dot" id="d3"></span>
            <span class="dot" id="d4"></span>
            <span class="dot" id="d5"></span>
        </div>

        <div id="text1">
            NAJCZĘŚCIEJ WYBIERANE DANIA:
            <i class="fa-chef-hat"></i>
        </div>


        @Html.Action("BestRating", "Categories", new { name = "all" })



    </div>

    <div id="right-side">

        <div id="log">
            <a href="@Url.Action("Login", "Account", new { filter = "all" })">
                <div id="log-box" onmouseenter="showTxt(1)" onmouseleave="hideTxt(1)">
                    <div class="log-text"><i class="fas fa-sign-in-alt left-icon icn1"></i><b class="text1 log2">	&nbsp; ZALOGUJ SIĘ</b></div>
                </div>
            </a>
            <a href="@Url.Action("Logout", "Account", new { filter = "all" })">
                <div id="logout-box" onmouseenter="showTxt(2)" onmouseleave="hideTxt(2)">
                    <div class="log-text"><i class="fas fa-sign-out-alt left-icon icn2"></i><b class="text2 log2">	&nbsp; WYLOGUJ SIĘ</b></div>
                </div>
            </a>
            <a href="@Url.Action("Register", "Account", new { filter = "all" })">
                <div id="reg-box" onmouseenter="showTxt(3)" onmouseleave="hideTxt(3)">
                    <div class="log-text"><i class="fa fa-user-plus left-icon icn3"></i><b class="text3 log2">	&nbsp; ZAREJESTRUJ SIĘ</b></div>
                </div>
            </a>
            <div id=""></div>
        </div>

        <div class="thebest">
            <div class="authors">
                POLECANE ARTYKUŁY
            </div>
            <div class="articles">

                @Html.Action("BestArticle", "Articles", new { area = "" })
            </div>
        </div>

        <div class="thebest">
            <div class="authors">
                NASI NAJLEPSI KUCHARZE
            </div>
            <div class="articles">
                KUCHARZ #1 <br />
                KUCHARZ #2 <br />
                KUCHARZ #3 <br />
            </div>
        </div>
    </div>



</div>


