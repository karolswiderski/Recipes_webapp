@model recipes_webapp.Models.ViewModels.Dishes.DishesVM

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/StyleSheets/Recipes/DetailsCSS.css" rel="stylesheet" />
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
<script>

    function change_color(class1, class2) {
            $("#heart").removeClass(class1 +" fa-heart");
            $("#heart").addClass(class2 +" fa-heart");
    }

</script>
<div id="details-body">
    <div id="about-this">
        <div id="image-box">

            <div id="image">
                @Html.Action("PhotoSlider", "Recipes", new { id = Model.Id_Gallery })
            </div>


            <div id="icon-box">
                <div class="icon"> <i title="dodaj do ulubionych" id="heart" class="far fa-heart" onmouseover="change_color('far', 'fas');" onmouseout="change_color('fas', 'far');"></i> 	&nbsp; @Html.DisplayFor(model => model.Rating) </div>
                <div class="icon">  <i tite="ilość porcji" class="glyphicon glyphicon-cutlery"></i> 	&nbsp; @Html.DisplayFor(model => model.Servings) </div>
                <div class="icon">  <i tite="czas przygotowania" class="far fa-clock"></i> &nbsp; @Html.DisplayFor(model => model.Time) </div>
                <div class="icon-last ">
                    <i tite="poziom trudności" class="glyphicon glyphicon-stats"></i> &nbsp;
                    @if (Convert.ToInt32(Html.DisplayFor(model => model.Level).ToString()) == 1)
                    {
                        <a>łatwy</a>
                    }
                    else if (Convert.ToInt32(Html.DisplayFor(model => model.Level).ToString()) == 2)
                    {
                        <a>średni</a>
                    }
                    else if (Convert.ToInt32(Html.DisplayFor(model => model.Level).ToString()) == 3)
                    {
                        <a>trudny</a>
                    }
                </div>
                <div class="icon">  <i class="far fa-file-pdf"></i> &nbsp; PDF </div>
            </div>
        </div>
        <div id="information-box">
            <div id="dish-box">
                <div id="path"><i  class="fas fa-caret-right"></i> kategoria: <a href="@Url.Action("Index", "Categories", new { categoryName = @TempData["categoryName"].ToString() , flag = true})">@TempData["categoryName"].ToString()</a>, danie: <b>@Html.DisplayFor(model => model.Name)</b> </div>
                <div id="author"><a href="#">Tomasz Nowak</a></div>
                <div id="name"><b>@Html.DisplayFor(model => model.Name)</b></div>
                <div id="description">@Html.DisplayFor(model => model.Description)</div>
            </div>
            <div id="ingredients-box">
                @Html.Action("Ingredients", "Recipes", new { id = Model.Id_Ingredient })
            </div>
        </div>

        <div id="steps-box">
            @Html.Action("Directions", "Recipes", new { id = Model.Id_Direction })
        </div>
    </div>

    <div id="other">
        <div id="other-text">
            <b>ZOBACZ PODOBNE PRZEPISY</b>
        </div>
        @Html.Action("BestRating", "Categories", new { name = @TempData["categoryName"] })
    </div>
</div>


